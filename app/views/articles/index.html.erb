<% provide(:title,'Home') %>
<section id="hero relative">
    <div class="flex justify-center items-center">
        <%= image_tag('hero.png', alt: 'hero image') %>
    </div>
    <div class="bg-white absolute">
        <h1 class="text-red-800 text-xl sm:text-2xl xl:text-3xl font-bold">That is not dead which can eternal lie,<br>
And with strange aeons even death may die.</h1>
    </div>
</section>
<main id="articles-container" class="">
    <div>
        <h1 id='subtitle' class="text-4xl text-white" >Articles</h1>
        <%= link_to 'New article', new_article_path, class: 'btn new' %>
    </div>
    <div class="md:grid md:grid-cols-3 md:gap-4">
        <%= render @articles %>
    </div>
</main>