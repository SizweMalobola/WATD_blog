<div class="comment-container">
  <div>
    <strong>Username:</strong>
    <%= comment.user_name %>
  </div>
  <div>
    <strong>Comment:</strong>
    <%= comment.body %>
  </div>
  <div>
    <%= link_to 'Delete comment', [comment.article,comment], method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
</div>
